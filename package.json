{
  "name": "trip-hotel-booking",
  "version": "1.0.0",
  "description": "易宿酒店预订平台 - 包含移动端、PC管理端和后端",
  "private": true,
  "workspaces": [
    "server",
    "admin",
    "mini-app",
    "shared"
  ],
  "scripts": {
    "dev:server": "pnpm --filter server dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:mini-app:h5": "pnpm --filter mini-app dev:h5",
    "dev:mini-app:weapp": "pnpm --filter mini-app dev:weapp",
    "dev": "pnpm -r --parallel run dev",
    "build:shared": "pnpm --filter shared build",
    "build:server": "pnpm --filter server build",
    "build:admin": "pnpm --filter admin build",
    "build:mini-app:h5": "pnpm --filter mini-app build:h5",
    "build:mini-app:weapp": "pnpm --filter mini-app build:weapp",
    "build": "pnpm build:shared && pnpm build:server && pnpm build:admin && pnpm build:mini-app:h5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
